<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/roundpopupbackground"


    >



    <androidx.cardview.widget.CardView
        android:id="@+id/popupcardview_id"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/popupimageview_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/profilepic" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/popupfullname_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popupcardview_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/muli_bold"
        android:text="Full Name"
        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/popupusername_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popupfullname_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/muli"
        android:text="\@username"
        android:textColor="#777171"
        android:textSize="20sp" />


    <ImageView
        android:id="@+id/popupchaticon_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/popupusername_id"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/chaticonforpopup" />

    <ImageView
        android:id="@+id/popupvoiceicon_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/popupusername_id"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="30dp"

        android:src="@drawable/popupaudiomessage" />






</RelativeLayout>